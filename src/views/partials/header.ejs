<header>
  <section class="flex__header--768px">
    <div>
      <a href="/"><img class="logo" src="/images/corsair-logo.svg" alt="logo" /></a>
    </div>
    <div class="flex__header">
      <div class="search__header">
        <input class="form-control" type="search" name="Buscador" id="" />
        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
      </div>
      <div class="header__loginCart">
        <% if(locals && locals.user){ %>
          <a href="/users/edit/<%= user.id %> ">
            <img class="img__perfil--header" src="/images/users/<%= user.userImage %>" alt="<%= user.userImage %>">
          </a>
          <form class="header__logout" action="/users/logout?_method=DELETE" method="POST">
            <button type="submit" class="btn">Logout</button>
          </form>
          <% }else{ %>
            <a href="/users/login">
              <button class="btn">Login</button><i class="fas fa-user"></i>
            </a>
            <a href="/users/register">
              <button class="btn">Register</button><i class="fas fa-address-book"></i>
            </a>
            <% } %>
              <a href="/products/cart"><i class="fas fa-dolly"></i></a>
      </div>
    </div>
  </section>

  <!-- Inicio de NavBar -->
  <section>
    <nav>
      <ul>
        <li><a href="/products">Todos los productos</a></li>
        <li><a href="#">Nosotros</a></li>
        <li><a href="#">Contactos</a></li>
      </ul>
    </nav>
  </section>
</header>