<!DOCTYPE html>
<html lang="en">
<!-- Inicio de head -->
<%- include('../partials/head') %>

  <body>
    <!-- Inicio de header -->
    <%- include('../partials/header') %>

      <!-- Inicio de main -->
      <main>
        <div class="box">
          <div class="box-login">
            <h2>Editar producto</h2>
            <%- include('../partials/errors') %>
              <form action="/products/<%= product.id %>?_method=PUT" method="POST" id="formProduct"
                enctype="multipart/form-data">
                <div class="email-box">
                  <label class="l-email" for="productName">Nombre del producto</label>
                  <input class="text-input" type="text" name="productName" id="productName"
                    value="<%= product.titulo  %>" />
                </div>

                <div class="email-box">
                  <label class="l-email" for="productDescription">Descripci√≥n del producto</label>
                  <textarea class="text-input" name="productDescription" id="productDescription" rows="5">
<%= product.descripcion %></textarea>
                </div>

                <div class="email-box">
                  <label class="l-email" for="imgProduct">Cargar imagenes</label>
                  <input class="text-input" type="file" name="imgProduct" id="imgProduct" />
                </div>

                <%- include('../partials/category', { category: product.categoria_id }) %>

                  <div class="email-box">
                    <label class="l-email" for="price">Precio</label>
                    <input class="text-input" type="text" name="price" id="price" value="<%= product.precio  %>" />
                  </div>

                  <div class="email-box">
                    <label class="l-email" for="productFeatures">Caracteristicas del producto</label>
                    <textarea class="text-input" name="productFeatures" id="productFeatures" rows="5">
<%= product.caracteristicas %></textarea>
                  </div>

                  <div class="email-box">
                    <label class="l-email" for="popular">Producto destacado<input type="checkbox" name="popular"
                        id="popular" <%=product.isRecommended ? 'checked' : '' %>
                      ></label>
                  </div>

                  <input class="button-submit" type="submit" value="Confirmar cambios" />
              </form>

              <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                <input class="button-submit" type="submit" value="Eliminar producto" />
              </form>
          </div>
        </div>
      </main>

      <!-- Inicio del footer -->
      <%- include('../partials/footer.ejs') %>
  </body>
  <script src="/js/productValidation.js"></script>


</html>